<h1>Events</h1>
<table class="table table-striped">
  <thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Adress</th>
    <th>Phone</th>
    <th>Janra</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @events.each do |event| %>
      <tr>
        <td><%= event.id %></td>
        <td><%= link_to event.name, event_path(event) %></td>
        <td><%= link_to event.adress, event_path(event) %></td>
        <td><%= link_to event.phone, event_path(event) %></td>
        <td><%= link_to event.janra, event_path(event) %></td>
        <td>
          <%= link_to 'Edit', edit_event_path(event), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', event_path(event), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= link_to 'New', new_event_path, :class => 'btn btn-primary' %>