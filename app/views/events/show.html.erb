<h1>Event</h1>
<p>
  <b>Name</b><br>
  <%= @event.name %>
</p>
<p>
  <b>Directed</b><br>
  <%= @event.directed %>
</p>
<p>
  <b>Janra</b><br>
  <%= @event.janra %>
</p>
<p>
  <b>Length</b><br>
  <%= @event.length %>
</p>
<div class="form-actions">
  <%= link_to 'Back', event_path, :class => 'btn' %>
  <%= link_to 'Edit', edit_event_path(@event), :class => 'btn' %>
  <%= link_to 'Delete', event_path(@event), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>