<%= simple_form_for @event, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@event[:name]) %>
  <%= f.input :adress %>
  <%= error_span(@event[:adress]) %>
  <%= f.input :phone %>
  <%= error_span(@event[:phone]) %>
  <%= f.input :janra %>
  <%= error_span(@event[:janra]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                events_path, :class => 'btn btn-default' %>
<% end %>
