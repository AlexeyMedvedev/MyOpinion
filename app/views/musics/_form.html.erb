<%= simple_form_for @music, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@music[:name]) %>
  <%= f.input :singer %>
  <%= error_span(@music[:singer]) %>
  <%= f.input :janra %>
  <%= error_span(@music[:janra]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                musics_path, :class => 'btn btn-default' %>
<% end %>
