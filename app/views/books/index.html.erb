<h1>Books</h1>
<table class="table table-striped">
  <thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Author</th>
    <th>Janra</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= link_to book.name, book_path(book) %></td>
        <td><%= link_to book.author, book_path(book) %></td>
        <td><%= link_to book.janra, book_path(book) %></td>
        <td>
          <%= link_to 'Edit', edit_book_path(book), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', book_path(book), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= link_to 'New', new_book_path, :class => 'btn btn-primary' %>