<%= simple_form_for @game, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@game[:name]) %>
  <%= f.input :platform %>
  <%= error_span(@game[:platform]) %>
  <%= f.input :janra %>
  <%= error_span(@game[:janra]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                games_path, :class => 'btn btn-default' %>
<% end %>
