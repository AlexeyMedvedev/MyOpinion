<h1>Game</h1>
<p>
  <b>Name</b><br>
  <%= @game.name %>
</p>
<p>
  <b>Platform</b><br>
  <%= @game.platform %>
</p>
<p>
  <b>Janra</b><br>
  <%= @game.janra %>
</p>
<div class="form-actions">
  <%= link_to 'Back', game_path, :class => 'btn' %>
  <%= link_to 'Edit', edit_game_path(@game), :class => 'btn' %>
  <%= link_to 'Delete', game_path(@game), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>