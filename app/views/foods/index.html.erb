<h1>Foods</h1>
<table class="table table-striped">
  <thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Adress</th>
    <th>Phone</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @foods.each do |food| %>
      <tr>
        <td><%= food.id %></td>
        <td><%= link_to food.name, food_path(food) %></td>
        <td><%= link_to food.adress, food_path(food) %></td>
        <td><%= link_to food.phone, food_path(food) %></td>
        <td>
          <%= link_to 'Edit', edit_food_path(food), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', food_path(food), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= link_to 'New', new_food_path, :class => 'btn btn-primary' %>